\usetheme{default}
\useoutertheme{default}
\useinnertheme{circles}
\usefonttheme{professionalfonts}

\usepackage{fontspec}

\setmainfont[Mapping=tex-text]{Ubuntu}

\setbeamerfont{title}{size={\huge}}
\setbeamerfont{frametitle}{size=\huge}
\setbeamerfont{copyright in head/foot}{size=\Tiny}
\setbeamerfont{framenumber in head/foot}{size=\Tiny}

\setbeamertemplate{background canvas}{
  \hspace{2cm}
  \begin{columns}
    \begin{column}{0.5\textwidth}
      \vspace{18.5cm}
    \end{column}
    \begin{column}{0.5\textwidth}
      % \includegraphics[keepaspectratio]{background.png}
    \end{column}
  \end{columns}
}
\setbeamertemplate{frametitle}[default][center]
\setbeamertemplate{navigation symbols}{} %no nav symbols

\usepackage{color}
\usecolortheme[RGB={221,72,20}]{structure}
\setbeamercolor{normal text}{fg=gray}
\setbeamercolor{copyright in head/foot}{fg=gray}
\setbeamercolor{framenumber in head/foot}{fg=gray}

\defbeamertemplate*{footline}{infolines theme}
{
  \leavevmode
  \hbox{
    \begin{beamercolorbox}[left]{}
      \insertframenumber{}
    \end{beamercolorbox}
  }
}

\defbeamertemplate*{headline}{}
{
	\leavevmode
}

\defbeamertemplate*{title page}{texsx}[1][]
{
  % WARNING: this makes the template assume and work well only with [aspectratio=169]
  \begin{beamercolorbox}[wd=\paperwidth]{background}
    \includegraphics[keepaspectratio, width=\paperwidth, height=\paperheight]{bg-title.png}
  \end{beamercolorbox}
  \vskip-7cm%
  \begin{beamercolorbox}[leftskip=5cm,wd=15cm]{title}
    \usebeamerfont{title}\inserttitle
  \end{beamercolorbox}
  \begin{beamercolorbox}[]{author}
    \usebeamerfont{author}\begin{flushright}\insertauthor\end{flushright}
  \end{beamercolorbox}
  \vskip7cm%
  \vfill
}
